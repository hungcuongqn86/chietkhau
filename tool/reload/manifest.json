{
  "name": "Reload",
  "description": "Reload.",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Reload!",
    "default_icon": "icons/icon.png"
  },
  "icons": { 
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://pub.alimama.com/"
  ],
  "content_scripts": [
    {
      "css": [
        "/css/reload.css"
      ],
      "js": [
        "/dist/reload.js"
      ],
      "matches": [
		"http://pub.alimama.com/"
      ]
    }
  ]
}